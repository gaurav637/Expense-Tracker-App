{
  "name": "backend",
  "version": "1.0.0",
  "description": "Expense Tracker Application ",
  "main": "server.js",
  "type": "module",
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "testMatch": [
      "**/__tests__/**/*.js"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(module-to-transform|another-module)/)"
    ]
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "prepare": "husky install",
    "commit": "cz",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoosh": "^0.0.7",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.0",
    "validator": "^13.15.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/jest": "^29.5.14",
    "@types/winston": "^2.4.4",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
